{% extends 'base.html.twig' %}

{% block title %}Vos Reclamation {% endblock %}

{% block body %}





    <h1 xmlns:background-color="http://www.w3.org/1999/xhtml">Vos reclamations</h1>
{{ form(form) }}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_user</th>
                <th>Id_produit</th>
                <th>Message</th>
                <th>Sujet</th>
{#<th>Id_moderateur</th>#}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.id}}</td>
                <td>{{ reclamation.idUser }}</td>
                <td>{{ reclamation.idProduit }}</td>
                <td>{{ reclamation.message }}</td>
                <td>{{ reclamation.sujet }}</td>
                {#  <td>{{ reclamation.idModerateur }}</td>#}
                <td>
                    <a href="{{ path('reclamation_show', {'id': reclamation.id}) }}">show</a>
                    <a href="{{ path('reclamation_edit', {'id': reclamation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">pas de réclamations trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reclamation_new') }}">ajouter votre réclamation</a>





{% endblock %}
