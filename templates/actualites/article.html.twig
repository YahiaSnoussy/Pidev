{% extends 'base.html.twig' %}

{% block title %}{{ article.titre }}{% endblock %}

{% block body %}

    <h1>{{ article.titre }}</h1>
    <p>{{ article.createdAt|date }} - Commentaires : {{ commentaires|length }}</p>
    <img src="http://placehold.it/800x700" alt="">

    <div>{{ article.contenu|raw }}</div>

    <p>Cat√©gories :
        {% for categorie in article.categories %}
            {{ categorie.nom }}
        {% endfor %}
    </p>
    <h3><a href="{{ path('actualites_topdf', {'id': article.id}) }}">Imprimer</a></h3>
    <h2>Commentaires</h2>
    {% for commentaire in commentaires %}
        <p>*{{ commentaire.createdAt|date }}:     {{ commentaire.contenu }}</p>
    {% endfor %}
    {{ form(formComment) }}

{% endblock %}
